APP_NAME="Language Learning AI Backend"
DEBUG=true
VERSION="1.0.0"

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/language_ai"
DATABASE_URL_ASYNC="postgresql+asyncpg://user:password@localhost:5432/language_ai"

# Redis (for Celery)
REDIS_URL="redis://localhost:6379/0"

# Security
SECRET_KEY="your-super-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI APIs (Get these from OpenAI)
OPENAI_API_KEY="sk-your-openai-api-key-here"

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_FOLDER="uploads"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
AI_REQUESTS_PER_DAY=100
